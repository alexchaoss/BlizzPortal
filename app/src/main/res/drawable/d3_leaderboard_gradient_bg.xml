<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000"
                android:centerColor="#000000"
                android:type="radial"
                android:gradientRadius="700dp"
                android:endColor="#550000"
                android:centerX="1.6"
                android:centerY="0.5"
                />
        </shape>
    </item>
    <item android:bottom="1dp" android:left="1dp" android:top="1dp" android:right="-3dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#550000"/>
        </shape>
    </item>
</layer-list>