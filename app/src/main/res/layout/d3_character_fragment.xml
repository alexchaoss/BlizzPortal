<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_d3_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diablo3_background"
    android:clickable="true"
    android:focusable="true">

    <HorizontalScrollView
        android:id="@+id/scrollviewhoriz"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/paperdoll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/background_character" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="35dp"
                android:layout_alignBottom="@id/paperdoll"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/top_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/vitality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/crit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/crit_chance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/attack_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/area_damage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/cooldown_reduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555da5"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignEnd="@id/paperdoll"
                android:layout_alignStart="@+id/items"
                android:gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="35dp">
                <TextView
                    android:id="@+id/level_class"
                    android:text="@string/class_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffead4"
                    android:textSize="12sp"
                    android:fontFamily="@font/diablo_light"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/character_name"
                    android:text="@string/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diablo_light"
                    android:textColor="@color/owBackgroundColor"
                    android:textSize="45sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/paperdoll"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="145dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shoulder"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/shoulders" />

                    <ImageView
                        android:id="@+id/gloves"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/gloves" />

                    <ImageView
                        android:id="@+id/ring1"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="9dp"
                        android:contentDescription="@string/ring1" />

                    <ImageView
                        android:id="@+id/main_hand"
                        android:layout_width="54dp"
                        android:layout_height="103dp"
                        android:contentDescription="@string/main_hand" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="125dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/head" />

                    <ImageView
                        android:id="@+id/chest"
                        android:layout_width="65dp"
                        android:layout_height="91dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/chest" />

                    <ImageView
                        android:id="@+id/belt"
                        android:layout_width="65dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/belt" />

                    <ImageView
                        android:id="@+id/legs"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/legs" />

                    <ImageView
                        android:id="@+id/boots"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:contentDescription="@string/boots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/amulet"
                        android:layout_width="45dp"
                        android:layout_height="46dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="17dp"
                        android:contentDescription="@string/amulet" />

                    <ImageView
                        android:id="@+id/bracers"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/bracers" />

                    <ImageView
                        android:id="@+id/ring2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="9dp"
                        android:contentDescription="@string/ring2" />

                    <ImageView
                        android:id="@+id/off_hand"
                        android:layout_width="54dp"
                        android:layout_height="103dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/off_hand" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_stats"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transmog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/primarystats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/secondarystats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/miscinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/flavortext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/gems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weapontype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>