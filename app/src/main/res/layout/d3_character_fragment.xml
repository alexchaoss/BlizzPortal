<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_d3_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diablo3_background"
    android:clickable="true"
    android:focusable="true">

    <HorizontalScrollView
        android:id="@+id/scrollviewhoriz"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/paperdoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/background_character"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/items"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#555da5"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/vitality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/crit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/crit_chance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/attack_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/area_damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/cooldown_reduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555da5"
                        android:textSize="15sp" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/items"
                android:layout_alignEnd="@id/paperdoll"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/items"
                app:layout_constraintEnd_toEndOf="@+id/items"
                app:layout_constraintStart_toStartOf="@+id/items"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/level_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/diablo_light"
                    android:textColor="#ffead4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diablo_light"
                    android:textColor="@color/owBackgroundColor"
                    android:textSize="45sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shoulder"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/shoulders" />

                    <ImageView
                        android:id="@+id/gloves"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/gloves" />

                    <ImageView
                        android:id="@+id/ring1"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="9dp"
                        android:contentDescription="@string/ring1" />

                    <ImageView
                        android:id="@+id/main_hand"
                        android:layout_width="54dp"
                        android:layout_height="103dp"
                        android:contentDescription="@string/main_hand" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/head" />

                    <ImageView
                        android:id="@+id/chest"
                        android:layout_width="65dp"
                        android:layout_height="91dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/chest" />

                    <ImageView
                        android:id="@+id/belt"
                        android:layout_width="65dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/belt" />

                    <ImageView
                        android:id="@+id/legs"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/legs" />

                    <ImageView
                        android:id="@+id/boots"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:contentDescription="@string/boots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/amulet"
                        android:layout_width="45dp"
                        android:layout_height="46dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="17dp"
                        android:contentDescription="@string/amulet" />

                    <ImageView
                        android:id="@+id/bracers"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/bracers" />

                    <ImageView
                        android:id="@+id/ring2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="9dp"
                        android:contentDescription="@string/ring2" />

                    <ImageView
                        android:id="@+id/off_hand"
                        android:layout_width="54dp"
                        android:layout_height="103dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/off_hand" />
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>


        <ScrollView
            android:id="@+id/item_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:focusable="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/item_stats"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/diablo_light"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/image_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/item_icon" />

                    <LinearLayout
                        android:id="@+id/armor_damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    <RelativeLayout
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>