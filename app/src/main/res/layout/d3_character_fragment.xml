<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_d3_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diablo3_background"
    android:clickable="true"
    android:focusable="true">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/paperdoll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/background_character"
                app:srcCompat="@drawable/wizard_female_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@id/paperdoll"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shoulder"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/shoulders" />

                    <ImageView
                        android:id="@+id/gloves"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/gloves" />

                    <ImageView
                        android:id="@+id/ring1"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/ring1" />

                    <ImageView
                        android:id="@+id/main_hand"
                        android:layout_width="54dp"
                        android:layout_height="98dp"
                        android:contentDescription="@string/main_hand" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="54dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/head" />

                    <ImageView
                        android:id="@+id/chest"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/chest" />

                    <ImageView
                        android:id="@+id/belt"
                        android:layout_width="54dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/belt" />

                    <ImageView
                        android:id="@+id/legs"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/legs" />

                    <ImageView
                        android:id="@+id/boots"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:contentDescription="@string/boots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/amulet"
                        android:layout_width="45dp"
                        android:layout_height="46dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="95dp"
                        android:layout_marginBottom="17dp"
                        android:contentDescription="@string/amulet" />

                    <ImageView
                        android:id="@+id/bracers"
                        android:layout_width="54dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/bracers" />

                    <ImageView
                        android:id="@+id/ring2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/ring2" />

                    <ImageView
                        android:id="@+id/off_hand"
                        android:layout_width="54dp"
                        android:layout_height="103dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/off_hand" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>