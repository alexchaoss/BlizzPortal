                    android:textSize="18sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="325dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/owBackgroundColor" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tabIndicatorColor="#FFFFFF"
                    app:tabTextColor="@color/owBackgroundColor">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/spec1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spec1" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/spec2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spec2" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/spec3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spec3" />
                </com.google.android.material.tabs.TabLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/no_talent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/talent_information_not_available"
                        android:textColor="@color/owBackgroundColor"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
