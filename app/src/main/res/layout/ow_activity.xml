<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293347"
    android:orientation="vertical"
    tools:context=".UI.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="675dp"
        android:background="@color/owHeaderColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btag_header"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:autofillHints=""
        android:background="@null"
        android:gravity="center"
        android:hint="@string/btag"
        android:text="@string/btag"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:targetApi="o" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/owBackgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btag_header"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/btag_header"
        app:layout_constraintVertical_bias="0.642">

        <ImageButton
            android:id="@+id/wowButton"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/wow_icon"
            android:contentDescription="@string/wow_button" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/diablo3Button"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/diablo3_icon"
            android:contentDescription="@string/diablo_button" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/starcraft2Button"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/sc2_icon"
            android:contentDescription="@string/starcraft_button" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/overwatchButton"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/overwatch_icon_glow"
            android:contentDescription="@string/overwatch_button" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gybraltor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gibraltar_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/icon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/level_prestige"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gybraltor">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bignoodletoo"
                    android:textColor="#FFF"
                    android:textSize="40sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/level_prestige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/games_won"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_name">

                <ImageView
                    android:id="@+id/level_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/prestige_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/level_icon"
                    app:layout_constraintStart_toStartOf="@+id/level_icon"
                    app:layout_constraintTop_toTopOf="@+id/level_icon" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/level_icon"
                    app:layout_constraintEnd_toEndOf="@+id/level_icon"
                    app:layout_constraintStart_toStartOf="@+id/level_icon"
                    app:layout_constraintTop_toTopOf="@+id/level_icon" />

                <!--<View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#AAA"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toEndOf="@+id/level_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/endorsement_icon"/>

                <ImageView
                    android:id="@+id/endorsement_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toEndOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/view"/>

                <TextView
                    android:id="@+id/endorsement_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/endorsement_icon"
                    app:layout_constraintTop_toTopOf="@+id/endorsement_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/endorsement_icon"
                    app:layout_constraintEnd_toEndOf="@+id/endorsement_icon"/>-->

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="#AAA"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ratings"
                    app:layout_constraintStart_toEndOf="@+id/level_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rating_icon_tank"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/rating_icon_rank_tank"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/rating_tank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#FFF"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rating_icon_damage"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/rating_icon_rank_damage"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/rating_damage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#FFF"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rating_icon_support"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/rating_icon_rank_support"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/rating_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#FFF"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/games_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/koverwatch"
                android:textColor="#9daac8"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/crystal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/level_prestige" />

            <ImageView
                android:id="@+id/top_character"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@id/crystal"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/crystal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/crystal_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gybraltor" />

            <LinearLayout
                android:id="@+id/quick_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/crystal">

                <TextView
                    android:id="@+id/quickplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#FFF"
                    android:text="QUICK PLAY"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/competitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="COMPETITIVE PLAY"
                    android:textSize="12sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/top_crystal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quick_comp"
                app:layout_constraintBottom_toTopOf="@id/top_hero_list">

                <TextView
                    android:id="@+id/top_heroes_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/koverwatch"
                    android:text="@string/top_heroes"
                    android:textColor="#f6f6f6"
                    android:textSize="35sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="185dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ow_spinner"
                    android:hint="@string/time_played"
                    android:spinnerMode="dialog"
                    android:textAlignment="viewStart"
                    android:textColorHint="#FFFFFF"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:background="#8092b6" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/top_hero_list"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:nestedScrollingEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_crystal">

                <LinearLayout
                    android:id="@+id/hero_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>