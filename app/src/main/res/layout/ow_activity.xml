<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293347"
    android:orientation="vertical"
    tools:context=".UI.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="675dp"
        android:background="@color/owHeaderColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btag_header"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:autofillHints=""
        android:background="@null"
        android:gravity="center"
        android:hint="@string/btag"
        android:text="@string/btag"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:targetApi="o" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/owBackgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btag_header"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/btag_header"
        app:layout_constraintVertical_bias="0.642">

        <ImageButton
            android:id="@+id/wowButton"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/wow_icon"
            android:contentDescription="@string/wow_button" />

        <View
            android:layout_width="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/diablo3Button"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/diablo3_icon"
            android:contentDescription="@string/diablo_button" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/starcraft2Button"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/sc2_icon"
            android:contentDescription="@string/starcraft_button" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/owBackgroundColor" />

        <ImageButton
            android:id="@+id/overwatchButton"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/overwatch_icon_glow"
            android:contentDescription="@string/overwatch_button" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gybraltor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/gibraltar_bg"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <LinearLayout
        android:id="@+id/icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/level_prestige">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="65dp"
            android:layout_height="65dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/level_prestige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_name"
        app:layout_constraintBottom_toTopOf="@id/crystal">

        <ImageView
            android:id="@+id/level_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/level_icon"
            app:layout_constraintTop_toTopOf="@+id/level_icon"
            app:layout_constraintBottom_toBottomOf="@+id/level_icon"
            app:layout_constraintEnd_toEndOf="@+id/level_icon"/>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#AAA"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/level_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/endorsement_icon"/>

        <ImageView
            android:id="@+id/endorsement_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view"/>

        <TextView
            android:id="@+id/endorsement_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/endorsement_icon"
            app:layout_constraintTop_toTopOf="@+id/endorsement_icon"
            app:layout_constraintBottom_toBottomOf="@+id/endorsement_icon"
            app:layout_constraintEnd_toEndOf="@+id/endorsement_icon"/>

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#AAA"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/endorsement_level"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rating_icon"/>

        <ImageView
            android:id="@+id/rating_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rating"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/rating_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/crystal"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:src="@drawable/crystal_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gybraltor"/>

    <RelativeLayout
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:indeterminate="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminateDrawable="@drawable/progress_bar" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>