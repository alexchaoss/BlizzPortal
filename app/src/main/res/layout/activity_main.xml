<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:orientation="vertical"
    android:background="#242C37"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="344dp"
        android:layout_height="342dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/inputstyle"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/battleTag"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:hint="@string/battle_tag"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:lineSpacingExtra="8sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_spinner"
            android:gravity="center"
            android:popupBackground="#000"
            android:hint="@string/select_region"
            android:
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonLogin"
            android:background="@drawable/buttonstyle"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="60dp"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            tools:layout_editor_absoluteY="436dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="155dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:layout_marginBottom="62dp"
        android:contentDescription="@string/battlenetlogo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bnet_logo" />


</android.support.constraint.ConstraintLayout>