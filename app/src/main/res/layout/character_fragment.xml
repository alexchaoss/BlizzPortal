<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wowBackgroundColor">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/neck"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/shoulder"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/chest"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/shirt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/tabard"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/wrist"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_hand"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/off_hand"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hands"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/waist"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/legs"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/feet"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/finger1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/finger2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/trinket1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/trinket2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/items"
                    app:srcCompat="@android:color/transparent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>